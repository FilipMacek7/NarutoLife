<Page x:Class="NarutoLife.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NarutoLife"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">
    <Page.Background>
        <ImageBrush ImageSource="../../img/menu.png"></ImageBrush>
    </Page.Background>
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="25">
            <Button Content="New game" Click="Button_Start" Height="30" Width="150" Margin="5"/>
            <Button Content="Load game" Click="Button_Load" Height="30" Width="150" Margin="5"/>
            <Button Content="Exit" Click="Button_Exit" Height="30" Width="150" Margin="5"/>
        </StackPanel>

    </Grid>
</Page>
