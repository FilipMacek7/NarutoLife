<Page x:Class="NarutoLife.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NarutoLife"
      mc:Ignorable="d" 
      d:DesignHeight="112" d:DesignWidth="200"
      Title="Settings" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Save game"  Width="76" Margin="10"/>
            <Button Content="Exit to menu" Width="74" Margin="10" Click="Button_Click"/>
        </StackPanel>
        <Button Grid.Column="1" Height="20" Width="20" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="4" Click="Settings_Close">
            <StackPanel>
                <Image Source="../../img/red_shuriken.png"></Image>
            </StackPanel>
        </Button>

    </Grid>
</Page>
